<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    ads:layout_constraintBottom_toTopOf="parent"
    ads:layout_constraintTop_toBottomOf="parent"
    tools:context=".View">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ad_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/ad_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:id="@+id/scroll"
        style="@android:style/Widget.DeviceDefault.Light.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="65dp"
        android:scrollbarStyle="insideOverlay"
        ads:layout_constraintTop_toBottomOf="@id/ad_banner">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/currentDate"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:textColor="@color/black"
                android:textSize="@dimen/body"
                android:gravity="center"
                ads:layout_constraintEnd_toStartOf="@+id/currentBalance"
                ads:layout_constraintStart_toStartOf="parent"
                ads:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/currentBalance"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:textColor="@color/black"
                android:textSize="@dimen/body"
                android:gravity="center"

                ads:layout_constraintEnd_toStartOf="@+id/currentTerms"
                ads:layout_constraintStart_toEndOf="@+id/currentDate"
                ads:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/currentTerms"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:textColor="@color/black"
                android:gravity="center"

                android:textSize="@dimen/body"
                ads:layout_constraintTop_toTopOf="parent"
                ads:layout_constraintEnd_toEndOf="parent"
                ads:layout_constraintStart_toEndOf="@+id/currentBalance"/>


            <TextView
                android:id="@+id/activity_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="@dimen/heading"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                ads:layout_constraintTop_toBottomOf="@+id/currentDate"                />

            <TextView
                android:id="@+id/activity_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="@string/amortization_schedule"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/body"
                ads:layout_constraintEnd_toEndOf="@id/activity_label"
                ads:layout_constraintStart_toStartOf="@id/activity_label"
                ads:layout_constraintTop_toBottomOf="@id/activity_label" />




            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"

                android:fitsSystemWindows="true"
                android:stretchColumns="0,1,2,3,4,5,6"
                ads:layout_constraintEnd_toEndOf="@id/activity_label"
                ads:layout_constraintStart_toStartOf="@id/activity_label"
                ads:layout_constraintTop_toBottomOf="@id/activity_message" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>