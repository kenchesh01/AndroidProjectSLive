<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scroll"
        style="@android:style/Widget.DeviceDefault.Light.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="@dimen/margin"
        android:scrollbarStyle="insideOverlay">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/app_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/app_message"
                android:textColor="@color/orange"
                android:textSize="@dimen/title"
                ads:layout_constraintEnd_toEndOf="parent"
                ads:layout_constraintStart_toStartOf="parent"
                ads:layout_constraintTop_toTopOf="parent" />



            <ImageView
                android:id="@+id/button_CD"
                android:layout_width="0dp"
                android:layout_height="@dimen/icon"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/white"
                android:contentDescription="@string/calculator_CD"
                android:gravity="center"
                android:text="@string/button_share"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/body"
                ads:layout_constraintEnd_toStartOf="@+id/button_savings"
                ads:layout_constraintHorizontal_bias="0.5"
                ads:layout_constraintHorizontal_chainStyle="spread_inside"
                ads:layout_constraintStart_toStartOf="@id/guideline_start"
                ads:layout_constraintTop_toBottomOf="@id/app_title"
                ads:srcCompat="@drawable/ic_deposit" />

            <ImageView
                android:id="@+id/button_savings"
                android:layout_width="0dp"
                android:layout_height="@dimen/icon"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:contentDescription="@string/calculator_savings"
                android:gravity="center"
                android:text="@string/button_save"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/body"
                ads:layout_constraintEnd_toEndOf="@id/guideline_end"
                ads:layout_constraintHorizontal_bias="0.5"
                ads:layout_constraintStart_toEndOf="@+id/button_CD"
                ads:layout_constraintTop_toBottomOf="@id/app_title"
                ads:srcCompat="@drawable/ic_savings" />


            <ImageView
                android:id="@+id/button_loan"
                android:layout_width="0dp"
                android:layout_height="@dimen/icon"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:contentDescription="@string/calculator_loan"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/body"
                ads:layout_constraintHorizontal_bias="0.5"
                ads:layout_constraintEnd_toStartOf="@+id/button_goal"
                ads:layout_constraintStart_toStartOf="@+id/guideline_start"
                ads:layout_constraintTop_toBottomOf="@id/label_deposit"
                ads:srcCompat="@drawable/ic_loan" />

            <ImageView
                android:id="@+id/button_goal"
                android:layout_width="0dp"
                android:layout_height="@dimen/icon"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:contentDescription="@string/calculator_goal"
                android:text="@string/button_amortization"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/body"
                ads:layout_constrainedWidth="false"
                ads:layout_constraintHorizontal_bias="0.5"
                ads:layout_constraintEnd_toEndOf="@+id/guideline_end"
                ads:layout_constraintStart_toEndOf="@+id/button_loan"
                ads:layout_constraintTop_toBottomOf="@id/label_savings"
                ads:srcCompat="@drawable/ic_goal" />




            <ImageView
                android:id="@+id/button_return"
                android:layout_width="0dp"
                android:layout_height="@dimen/icon"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:contentDescription="@string/calculator_savings"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/body"
                ads:layout_constraintEnd_toStartOf="@id/button_currency"
                ads:layout_constraintHorizontal_bias="0.5"
                ads:layout_constraintStart_toStartOf="@+id/guideline_start"
                ads:layout_constraintTop_toBottomOf="@id/label_loan"
                ads:srcCompat="@drawable/ic_returns" />

            <ImageView
                android:id="@+id/button_currency"
                android:layout_width="0dp"
                android:layout_height="@dimen/icon"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:contentDescription="@string/calculator_savings"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/body"
                ads:layout_constraintEnd_toEndOf="@id/guideline_end"
                ads:layout_constraintHorizontal_bias="0.5"
                ads:layout_constraintStart_toEndOf="@+id/button_return"
                ads:layout_constraintTop_toBottomOf="@id/label_goal"
                ads:srcCompat="@drawable/ic_currency" />



            <TextView
                android:id="@+id/label_deposit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/deposit"
                android:textColor="@color/pink"
                android:textSize="@dimen/body"
                ads:layout_constraintStart_toStartOf="@id/button_CD"
                ads:layout_constraintEnd_toEndOf="@+id/button_CD"
                ads:layout_constraintTop_toBottomOf="@id/button_CD" />

            <TextView
                android:id="@+id/label_savings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/savings"
                android:textColor="@color/pink"
                android:textSize="@dimen/body"
                ads:layout_constraintStart_toStartOf="@id/button_savings"
                ads:layout_constraintEnd_toEndOf="@+id/button_savings"
                ads:layout_constraintTop_toBottomOf="@id/button_savings" />

            <TextView
            android:id="@+id/label_loan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/calculator_loan"
            android:textColor="@color/pink"
            android:textSize="@dimen/body"
            ads:layout_constraintStart_toStartOf="@id/button_loan"
            ads:layout_constraintEnd_toEndOf="@+id/button_loan"
            ads:layout_constraintTop_toBottomOf="@id/button_loan" />

            <TextView
                android:id="@+id/label_goal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/goal"
                android:textColor="@color/pink"
                android:textSize="@dimen/body"
                ads:layout_constraintStart_toStartOf="@id/button_goal"
                ads:layout_constraintEnd_toEndOf="@+id/button_goal"
                ads:layout_constraintTop_toBottomOf="@id/button_goal" />

            <TextView
                android:id="@+id/label_return"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/investment"
                android:textColor="@color/pink"
                android:textSize="@dimen/body"
                ads:layout_constraintStart_toStartOf="@id/button_return"
                ads:layout_constraintEnd_toEndOf="@+id/button_return"
                ads:layout_constraintTop_toBottomOf="@id/button_return" />

            <TextView
            android:id="@+id/label_currency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/currency"
            android:textColor="@color/pink"
            android:textSize="@dimen/body"
            ads:layout_constraintStart_toStartOf="@id/button_currency"
            ads:layout_constraintEnd_toEndOf="@+id/button_currency"
            ads:layout_constraintTop_toBottomOf="@id/button_currency" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                ads:layout_constraintGuide_begin="20dp"
                ads:layout_constraintGuide_percent=".10" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                ads:layout_constraintGuide_begin="20dp"
                ads:layout_constraintGuide_percent=".90" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ad_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/ad_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>